{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Flask App",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/flask",
            "args": ["run"],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/pytest",
            "args": ["-v"],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Run Tests with Coverage",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/pytest",
            "args": ["--cov=app", "--cov-report=html"],
            "problemMatcher": []
        },
        {
            "label": "Format with Black",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/black",
            "args": ["app/"],
            "problemMatcher": []
        },
        {
            "label": "Run Flake8",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/flake8",
            "args": ["app/"],
            "problemMatcher": []
        },
        {
            "label": "Database Migrate",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/flask",
            "args": ["db", "upgrade"],
            "problemMatcher": []
        },
        {
            "label": "Flask Shell",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/flask",
            "args": ["shell"],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/pip",
            "args": ["install", "-r", "requirements.txt"],
            "problemMatcher": []
        },
        {
            "label": "Install Dev Dependencies",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/pip",
            "args": ["install", "-r", "requirements-dev.txt"],
            "problemMatcher": []
        }
    ]
}
