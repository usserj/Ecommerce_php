# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database
# Configuraci√≥n por defecto para desarrollo local (MySQL con root sin password)
DATABASE_URL=mysql+pymysql://root:@localhost/ferrete5_ecommerce
# Si tu MySQL tiene password para root, usa:
# DATABASE_URL=mysql+pymysql://root:tu_password@localhost/ferrete5_ecommerce
# O para PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/ecommerce

# Redis
REDIS_URL=redis://localhost:6379/0

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# PayPal Configuration
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# PayU Configuration
PAYU_MODE=test
PAYU_MERCHANT_ID=your-merchant-id
PAYU_ACCOUNT_ID=your-account-id
PAYU_API_KEY=your-api-key

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret

# reCAPTCHA
RECAPTCHA_PUBLIC_KEY=your-recaptcha-site-key
RECAPTCHA_PRIVATE_KEY=your-recaptcha-secret-key

# Currency API
CURRENCY_API_KEY=your-currency-api-key

# Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=app/static/uploads

# Session Configuration
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=604800
